<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bit2016.implicitintent.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="암시적 인텐트 사용하기!"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"/>

    <Button
        android:text="주소록"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_call"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/button_address" />

    <Button
        android:text="검색"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_web"
        android:layout_alignStart="@+id/button_web"
        android:layout_marginTop="14dp"
        android:id="@+id/button_search" />

    <Button
        android:text="전화걸기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/button_call"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/button_address" />

    <Button
        android:text="웹이동"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/button_web"
        android:layout_below="@+id/button_address"
        android:layout_alignStart="@+id/button_address" />

    <Button
        android:text="지도"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/button_map" />

    <!--카카오와 스토리 연결하는 방식-->
    <Button
        android:text="Share Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/button_share"
        android:layout_below="@+id/button_map"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
